<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dranawhite.mybatis.dao.PersonMapper">
    <resultMap id="BaseResultMap" type="Person">
        <result column="ID" jdbcType="INTEGER" property="id"/>
        <result column="NAME" jdbcType="VARCHAR" property="name"/>
        <result column="AGE" jdbcType="INTEGER" property="age"/>
        <result column="PHONE" jdbcType="VARCHAR" property="phone"/>
        <result column="ADDRESS" jdbcType="VARCHAR" property="address"
                typeHandler="com.dranawhite.mybatis.handler.AddressJsonHandler"/>
    </resultMap>

    <insert id="insertPerson" parameterType="Person">
        INSERT INTO T_PERSON VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id, jdbcType = INTEGER},
            </if>
            <if test="name != null">
                #{name, jdbcType = VARCHAR},
            </if>
            <if test="age != null">
                #{age, jdbcType = INTEGER},
            </if>
            <if test="phone != null">
                #{phone, jdbcType = VARCHAR},
            </if>
            <if test="address != null">
                #{address, jdbcType = VARCHAR, typeHandler = com.dranawhite.mybatis.handler.AddressJsonHandler},
            </if>
        </trim>
    </insert>
    <!-- trim标签，用于去除头部或者尾部的元素 -->
    <!-- bing标签，可以做一些绑定操作，其中name是传入的变量名 -->
    <select id="queryPersons" resultType="Person" parameterType="Person">
        <bind name="namePattern" value="name + '%'" />
        SELECT
            ID,
            NAME,
            AGE,
            PHONE,
            ADDRESS
        FROM T_PERSON
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="id != null">
                AND ID = #{id, jdbcType = INTEGER}
            </if>
            <if test="name != null">
                AND NAME LIKE #{namePattern}
            </if>
        </trim>
    </select>
</mapper>